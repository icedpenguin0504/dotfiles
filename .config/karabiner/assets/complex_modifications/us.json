{
  "title": "My Settings for US keyboard",
  "rules": [
    {
      "description": "cpas lock -> control (caps lock if alone)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": { 
              "optional": [ "any" ] 
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    }
  ]
}
